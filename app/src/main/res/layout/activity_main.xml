<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#FE565E"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
    />
    <TextView
        android:id="@+id/noPeopleWarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="Não há mais pessoas na sua região para ver"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/backgroundLikeFeedback"
            android:layout_marginRight="10dp"
            android:backgroundTint="#2db732"
            android:background="@drawable/image_border"
            android:layout_marginTop="100dp"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/likeFeedbackImage"
                android:src="@drawable/ic_like"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageContainer"
            android:backgroundTint="#fff"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_border"
            android:layout_marginTop="100dp"
            >
            <ImageView
                android:id="@+id/mainImage"
                android:layout_width="match_parent"
                android:layout_height="580dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/woman1"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/mainImage">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_surface"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/ic_like" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_surface"
                    android:src="@drawable/ic_dislike" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
